@model TwoFactorWeb.Models.TwoFactorSecret
@{
    ViewBag.Title = "ShowTwoFactorSecret";
}

<h2>Show Two Factor Secret</h2>

<p>
    Add the code below to Google Authenticator:
</p>
<p>
    <img src="http://qrcode.kaywa.com/img.php?s=8&d=@Url.Encode(string.Format("otpauth://totp/MY_APP_LABEL?secret={0}", Model.EncodedSecret))" />
</p>
<p>
    @Model.EncodedSecret
</p>
